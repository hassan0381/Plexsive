---
import ChevronRight from "../icons/chevronRight.tsx"
import Button from '../components/button.tsx'
import "../assets/main.css";
const { industries } = Astro.props;

const videosection_heroimage = '/data_cabling_switch.jpg';
const videosection_videotitle = 'What are Large Language Models (LLMs)?';
const videosection_videourl = 'https://www.youtube.com/embed/iR2O2GPbB0E';
const videosection_description = "Learn about Large Language Models (LLMs), a powerful neural network that enables computers to process and generate language better than ever before. Dale and Nikita share how LLMs work and how you can interact with them via prompts."
const video_section_style = {
  backgroundImage:
        "url('"+videosection_heroimage+"')",
    width: "100%",       
    minHeight: "35vh",
    padding: "5vmin",
    alignItems: "center",
    justifyContent: "center",
    backgroundSize: "cover",
    backgroundRepeat: "no-repeat"
};
const related_articles_heading = "Recently published Pulse insights."
const related_articles_subheading = "Industry Intelligence"
const related_articles_description = "Read the latest Pulse articles and industry insights."
const related_articles_category = "Industry Intelligence"
const related_articles_items = [
	{
		"related_article_title": "Digitally Transforming Businesses with AWS Cloud",
		"related_article_subheading": "Article",
		"related_article_image": "/data_operations_boardroom.jpg",
		"related_article_buttontext": "Read Pulse",
		"related_article_slug": "digitally-transforming-businesses-with-aws-cloud",
	},
	{
		"related_article_title": "Innovative Business Solutions with Maven's AWS Cloud",
		"related_article_subheading": "Article",
		"related_article_image": "/data_operations_boardroom.jpg",
		"related_article_buttontext": "Read Pulse",
		"related_article_slug": "innovative-business-solutions-with-maven's-aws-cloud",
	},
	{
		"related_article_title": "Boosting Operational Efficiency with AWS Cloud Services",
		"related_article_subheading": "Article",
		"related_article_image": "/data_operations_boardroom.jpg",
		"related_article_buttontext": "Read Pulse",
		"related_article_slug": "boosting-operational-efficiency-with-aws-cloud-services",
	},
]
const heading = "Rethink Technology"
const sub_heading_display = "INDUSTRIES"
const banner_img = {
    backgroundImage:
        "url(/mining_trucks_coal.jpg)",
};
const category_name = "Industries"
const category_url = "/industries"
const title = "Connected Intelligence"
const value_prop = "Our industry expertise and experience in delivering end-to-end solutions will help you navigate the complexities of the digital world."
// console.log(industries)
---

<section class="detailedpage_banner_topper">    
    <div class="container">
      <div class="wrapper">
        <div class="detailedpage_banner_topper_categoryheading">
      <a href={category_url}>{category_name}</a>
    </div>
    <ChevronRight />

    <div class="detailedpage_banner_topper_mainheading">
      <p>{title}</p>
    </div>
      </div>
    </div>
  </section>
  <section class="bg-hero" style={banner_img}> 
  <div class="container">
    <div class="contentWrapper">
      <p class="subHeading">{sub_heading_display}</p>
        <h1 class="heading">{heading}</h1>
    </div>
  </div> 
</section>
<section class="about">
  <div class="container">    
      <div class="aboutDesc">{value_prop}</div>    
   </div>
</section>

<section class="industries">  
  <div class="container">
    <h2 class="sectionHeading">Our Industries</h2>
			<div class="serviceWrapper">
        {industries.map((item:any, index:any) => (
           <div class="serviceBox" style={{backgroundImage: `url(${item.data.heroimage})`}}>
						<h3 class="heading">{item.data.heading}</h3>
						<p class="desc"> {item.data.featured_article1_description}</p>
						<Button className="btn" text="Explore Now"  href={"/industries/"+item.slug} />
					</div>
        ))}
			</div>  
  </div>
</section>
<section class="videoSection">
  <div class="container">
    <div class="gridWrapper">      
      <div class="leftWrapper">
          <h2 class="heading">{videosection_videotitle}</h2>
          <p class="desc">{videosection_description}</p>
      </div>
        <div class="right">
          <iframe width="420" height="315" src={videosection_videourl} />
        </div>
    </div>
  </div>
</section>
<section class="caseStudies">
  <div class="container">
      <h4 class="subHeading">
        {related_articles_subheading}          
      </h4>  
        <h2 class="sectionHeading">{related_articles_heading}</h2>
        <p class="desc">{related_articles_description}</p>
    <div class="projectWrapper">
      {
        related_articles_items.map((item:any, index:any) => (
          
          <div class="project">
            <a href={"../pulse/"+ item.related_article_slug}>
              <div class="imgWrapper">
                <img src={item.related_article_image} />                  
              </div>               
              <h2 class="title">
                {item.related_article_title}
              </h2>
              <h4 class="text">
                {item.related_article_subheading}
              </h4>
              
              <Button className="btn" text={item.related_article_buttontext} href={"../pulse/"+ item.related_article_slug} />
          </a>
          </div>
        ))
      }
    </div>  
  </div>
</section>
