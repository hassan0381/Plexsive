---
import MainLayout from '../layouts/main-layout.astro'
import Button from '../components/button.tsx'
import FAQ_Item from '../components/faq_item.tsx'
import ChevronRight from "../icons/chevronRight.tsx"

const name = "Frequently Asked Questions"
const space_address = "New Farm"
const short_description = ""
const description = "Our Coworking space is within a beautiful heritage building with polished wooden floors and high ceilings throughout. SaltSpace is home to a friendly community of established business, freelancers, consultants and more coworking together."
const lease_options = ""
const membership_details = ""
const heroimage = "/entrance.jpg"
const videosection_videotitle = "Check out our welcome video"
const videosection_videourl = "https://www.youtube.com/embed/EKf169q1zYA"
const videosection_heroimage = "/welcomevid_thumbnail.jpg"
const videosection_description = "Come for a tour of SaltSpace in the heart of New Farm. Centrally located in the heart of New Farm next to Merthyr village, Salt Space is surrounded by the Powerhouse, New Farm Park & New Farm Library."
const related_articles_heading = "Recently published articles."
const related_articles_subheading = "Get the News"
const related_articles_description = "Read the latest news and community insights from SaltSpace."
const related_articles_items = [
	{
		"related_article_title": "Au Revior and thank-you",
		"related_article_subheading": "Article",
		"related_article_image": "/new_farm_park.jpg",
		"related_article_buttontext": "Read News",
		"related_article_slug": "au-revior-and-thank-you"
	},
	{
		"related_article_title": "Suite D Avaliable May 2024",
		"related_article_subheading": "Article",
		"related_article_image": "/suite_d.jpg",
		"related_article_buttontext": "Read Now",
		"related_article_slug": "suite-d-avaliable-may-2024"
	},
	{
		"related_article_title": "New signs coming soon",
		"related_article_subheading": "Article",
		"related_article_image": "/entrance.jpg",
		"related_article_buttontext": "Read News",
		"related_article_slug": "new-signs-coming-soon"
	},
]
const sub_heading_display = "GOT A QUESTION?"
const banner_img = {
    backgroundImage:
        "url('/laptop_keyboard_typing.jpg')",
};
const video_section_style = {
  backgroundImage:
        "url('"+videosection_heroimage+"')",
    width: "100%",       
    minHeight: "35vh",
    padding: "5vmin",
    alignItems: "center",
    justifyContent: "center",
    backgroundSize: "cover",
    backgroundRepeat: "no-repeat"
};
const category_url = "/questions";
const category_name ="F.A.Qs."
const title_display = "Knowledge Base"
const { questions } = Astro.props;
---
	  <section class="detailedpage_banner_topper">    
    <div class="container">
      <div class="wrapper">
        <div class="detailedpage_banner_topper_categoryheading">
			<a href={category_url}>{category_name}</a>
    </div>
    <ChevronRight />

    <div class="detailedpage_banner_topper_mainheading">
        	{title_display}
      </div>
      </div>
    </div>
  </section>
  <section class="bg-hero" style={banner_img}>   
    <div class="container">
      <div class="contentWrapper">
          <p class="subHeading">{sub_heading_display}</p>
          <h1 class="heading">{name}</h1>
		  <p class="desc">{description}</p>
        </div>
      </div>
    </div>
  </section>
	<section class="about">		     
		<div class="container">
			{
			questions.map((item:any, index:any) => (
				<FAQ_Item 
          client:load
          question={item.data.question_title} 
          sub_title={item.data.sub_title} 
          short_answer={item.data.question_shortanswer} 
          long_answer={item.data.question_answer} 
          slug={item.slug} 
          image={item.data.image} />
      ))
			}
  
		</div>
	</section>
	
	  <section class="videoSection">
  <div class="container">
    <div class="gridWrapper">      
      <div class="leftWrapper">
          <h2 class="heading">{videosection_videotitle}</h2>
          <p class="desc">{videosection_description}</p>
      </div>
        <div class="right">
          <iframe width="420" height="315" src={videosection_videourl} />
        </div>
    </div>
  </div>
</section>

	  <section class="caseStudies">
    <div class="container">
        <h2 class="sectionHeading">{related_articles_heading}</h2>
        <h4 class="subHeading">
          {related_articles_subheading}          
        </h4>  
        <p class="desc">{related_articles_description}</p>
      <div class="projectWrapper">
        {
          related_articles_items.map((item:any, index:any) => (                      
            <div class="project">
               <div class="imgWrapper">
                <img src={item.related_article_image} />                  
              </div>  
                <h2 class="title">
                {item.related_article_title}
              </h2>               
              <h4 class="text">
                {item.related_article_subheading}
              </h4>
            
              <Button className="btn" text={item.related_article_buttontext}
                 href={"../insights/"+ item.related_article_slug}  />                       
            </div>
          ))
        }
      </div>  
    </div>
  </section>


