---
import { markdownify } from "../lib/utils/textConverter";
import ChevronRight from "../icons/chevronRight.tsx";
const { industries } = Astro.props;
// console.log(industries[0]);
---

<div class="row justify-center">
  {
    industries.map((industry: any) => (
      <div class="col-12 mb-8 sm:col-6 md:col-4">
        {industry.data.image && (
          <div class="mb-4">
            <img
              src={industry.data.image}
              alt={industry.data.title}
              height={150}
              width={150}
              class="mx-auto rounded-lg"
            />
          </div>
        )}
        <h3 class="h4 mt-8 mb-3">
          <a href={`/industries/${industry.slug}`} class="block hover:text-primary transition duration-200">
            {industry.data.title}
          </a>
        </h3>
        <p class="mb-3" set:text={markdownify(industry.body.slice(0, 100))} />
        <a href={`/industries/${industry.slug}`} class="inline-flex items-center text-primary transition duration-200 hover:opacity-70">
          Read More <ChevronRight  />
        </a>
      </div>
    ))
  }
</div>
